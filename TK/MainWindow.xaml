<Window x:Class="TK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TK"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Задание 1 (макс. 10 баллов):"/>
        <TextBox x:Name="txtTask1" Grid.Row="1"/>

        <TextBlock Grid.Row="2" Text="Задание 2 (макс. 50 баллов):" />
        <TextBox x:Name="txtTask2" Grid.Row="3" />

        <TextBlock Grid.Row="4" Text="Задание 3 (макс. 30 баллов):" Margin="0,0,0,5"/>
        <TextBox x:Name="txtTask3" Grid.Row="5" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="6" Text="Задание 4 (макс. 10 баллов):" />
        <TextBox x:Name="txtTask4" Grid.Row="7" />

        <Button x:Name="btnCalculate" Grid.Row="10" Content="Рассчитать" 
                Click="BtnCalculate_Click" Height="30" Margin="0,0,0,10"/>

        <TextBlock x:Name="lblTotalScore" Grid.Row="8" FontSize="14" FontWeight="Bold"/>
        <TextBlock x:Name="lblGrade" Grid.Row="9" FontSize="14" FontWeight="Bold"/>
    </Grid>
</Window>
